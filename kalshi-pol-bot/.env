OPENAI_API_KEY=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
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Market processing limits
MAX_BET_AMOUNT=2.0

# Event analysis configuration
MAX_EVENTS_TO_ANALYZE=5      # Number of top events to analyze by 24h volume
RESEARCH_BATCH_SIZE=5        # Number of parallel deep research requests (1-20 recommended)
SKIP_EXISTING_POSITIONS=true # Skip betting on markets where we already have positions
MINIMUM_TIME_REMAINING_HOURS=3.0  # Minimum hours remaining before event strike to consider it tradeable
MAX_MARKETS_PER_EVENT=7     # Maximum number of markets per event to analyze
MINIMUM_ALPHA_THRESHOLD= 2  # research_price / market_price must be >= this value

# Risk management / hedging configuration
ENABLE_HEDGING=true           # Enable hedging to minimize risk and protect downside
HEDGE_RATIO=0.25              # Hedge 25% of main bet
MIN_CONFIDENCE_FOR_HEDGING=0.6 # Only hedge bets with confidence < 60%
MAX_HEDGE_AMOUNT=8.0         # Max hedge amount per bet

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. Get Kalshi API credentials:
